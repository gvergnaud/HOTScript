{
  "name": "hotscript",
  "version": "1.0.2",
  "description": "Type-level madness",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "div0": "======================setup=============================",
    "setup": "npx husky install && npm i && cd docusaurus && npm i",
    "div1": "=================build & publish========================",
    "build": "tsc src/index.ts -d --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run test && npm run build",
    "div2": "=====================test===============================",
    "test": "jest",
    "clear-test": "jest --clearCache",
    "div3": "===================performance==========================",
    "perf": "tsc --project test/tsconfig.json --noEmit --extendedDiagnostics",
    "check": "tsc --strict --noEmit --extendedDiagnostics",
    "div4": "=====================others=============================",
    "fmt": "prettier ./src/** ./test/** -w",
    "pretty": "pretty-quick --stage --branch main",
    "div5": "==================docusaurus============================",
    "d-start": "cd docusaurus && npm run start",
    "d-build": "cd docusaurus && npm run build",
    "d-deploy": "cd docusaurus && npm run deploy"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,yml}": [
      "npm run pretty"
    ]
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gvergnaud/HOTScript.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gvergnaud/HOTScript/issues"
  },
  "homepage": "https://github.com/gvergnaud/HOTScript#readme",
  "author": "Gabriel Vergnaud",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
